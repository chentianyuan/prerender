{
  "compilerOptions": {
    // 编译目标
    "target": "es5",
    // 输出目录
    "outDir": "./dist/",
    // 添加需要解析的语法
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ],
    // 模块的解析
    "moduleResolution": "node",
    // 指定生成哪个模块系统代码
    "module": "esnext",
    // 指定基础目录
    "baseUrl": "./",
    // ts编译时生成对应的map文件
    "sourceMap": false,
    // 允许编译js文件
    "allowJs": true,
    // 启用装饰器
    "experimentalDecorators": true,
    "removeComments": false,
    "pretty": false,
    "paths": {
      "vue": ["node_modules/vue/types"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}